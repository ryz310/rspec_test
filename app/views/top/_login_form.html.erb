<%= form_tag :login, id: 'new_session' do %>
  <div>
    <%= label_tag 'username', 'Username' %>
    <%= text_field_tag 'username' %>
  </div>
  <div>
    <%= label_tag 'password', 'Password' %>
    <%= password_field_tag 'password' %>
  </div>
  <div>
    <%= submit_tag 'Login' %>
  </div>
<% end %>